<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/fondo2"
    tools:context="com.cmmapp.pablosj.cmmapp.RegistroActivity">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:background="@color/opacos">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/msn"
                android:textSize="22dp"
                android:text="Para nosotros es importante conocer tu opinión, contáctanos:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:gravity="center"
                android:id="@+id/mensajes"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:textColorHint="@color/black"
                android:hint="Escribe tu mensaje, comentario o sugerencia"/>

            <Button
                style="@style/botnoes_acciones"
                android:id="@+id/enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enviar"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
